extends layout

block content
  p Welcome #{username}!

  p SneakerReview is the one-stop destination for exploring and discussing the latest sneakers!

  div.carouselExampleIndicators.carousel.slide(data-ride="carousel")
    ol.carousel-indicators
      li.active(data-target="#carouselExampleIndicators", data-slide-to="0")
      li(data-target="#carouselExampleIndicators", data-slide-to="1")
      li(data-target="#carouselExampleIndicators", data-slide-to="2")
    div.carousel-inner
      div.carousel-item.active
        img.d-block.w-100(src="images/shoe_images/slideshow_image_1.jpg", alt="First slide")
      div.carousel-item
        img.d-block.w-100(src="images/shoe_images/slideshow_image_2.jpeg", alt="Second slide")
      div.carousel-item
        img.d-block.w-100(src="images/shoe_images/slideshow_image_3.jpeg", alt="Third slide")
