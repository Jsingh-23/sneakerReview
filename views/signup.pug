doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Sign Up
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")

    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,500;1,400&display=swap" rel="stylesheet")

    link(rel="stylesheet", href="/stylesheets/style.css")

  body(class="sign-in-page")
    div(class="header-container")
      h1(class="sign-in") REGISTER

    div(class="card bg-dark text-white sign-in-form-container")
      form(action="/signup", method="post" class="sign-in-form")
        div(class="form-outline mb-4")
          input(id="username" name="username" type="text" autocomplete="username" class="form-control" placeholder="Username" required)

        div(class="form-outline mb-4")
          input(id="new-password" name="password" type="password" autocomplete="new-password" class="form-control" placeholder="Password" required)

        button(type="submit" class="btn btn-primary btn-block mb-4 login-text") Sign Up

        div(class="text-center")
          p(class="login-text") Already have an account? <a class="login-text" href="/login"> Log In! </a>

    nav(class="navbar navbar-expand-lg navbar-light bg-white fixed-bottom sign-in-page")
      p(class="login-text mx-auto") Website created by <a class="login-text" href="https://www.github.com/jsingh-23">Jaskaranpal Singh!</a>